{
  "private": true,
  "author": {
    "name": "zenoven",
    "email": "zenoven@gmail.com"
  },
  "build": {
    "files": [
      "./dist/**/*",
      "./pages/**/*",
      "./node_modules/**/*"
    ],
    "appId": "com.tronmy.dara",
    "asar": false
  },
  "scripts": {
    "start": "electron app/dist/main/main",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "ESLINT=none BROWSER=none COMPRESS=none roadhog build -w",
    "dev:renderer": "APP_ROOT=src/renderer BROWSER=none umi dev",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "ESLINT=none roadhog build",
    "build:renderer": "APP_ROOT=src/renderer umi build",
    "pack": "npm run build && npm run rebuild && build",
    "pack:dir": "npm run build && npm run rebuild && build --dir",
    "pack:dirOnly": "build --dir",
    "rebuild": "electron-rebuild -m ./app"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "concurrently": "^3.5.1",
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "electron-debug": "^2.0.0",
    "electron-rebuild": "^1.8.4",
    "roadhog": "^0.6.1",
    "slash": "^2.0.0",
    "umi": "^2.6.16",
    "umi-plugin-react": "^1.7.5",
    "webpack": "^4.30.0"
  }
}
